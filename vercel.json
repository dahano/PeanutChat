{
  "version": 2,
  "builds": [
    {
      "src": "api/server/index.js",
      "use": "@vercel/node",
      "config": {
        "includeFiles": [
          "api/**",
          "packages/**",
          "client/dist/**",
          "librechat.yaml"
        ]
      }
    },
    {
      "src": "client/dist/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/assets/(.*)",
      "dest": "/client/dist/assets/$1"
    },
    {
      "src": "/favicon.ico",
      "dest": "/client/dist/favicon.ico"
    },
    {
      "src": "/manifest.webmanifest",
      "dest": "/client/dist/manifest.webmanifest"
    },
    {
      "src": "/registerSW.js",
      "dest": "/client/dist/registerSW.js"
    },
    {
      "src": "/sw.js",
      "dest": "/client/dist/sw.js"
    },
    {
      "src": "/api/(.*)",
      "dest": "/api/server/index.js"
    },
    {
      "src": "/(.*)",
      "dest": "/client/dist/index.html"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  },
  "functions": {
    "api/server/index.js": {
      "maxDuration": 30
    }
  }
} 